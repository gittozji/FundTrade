<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.zji.dao.CustInfoDao">
    <select id="create" parameterType="CustInfo" resultType="CustInfo" statementType="CALLABLE">
        {
            call sp_addCustInfo(#{custType},#{custName},#{identityNo},#{taCode},#{mobile},#{email},#{address},#{custType},#{custType},#{custNo,mode=OUT,jdbcType=VARCHAR})
        }
    </select>

    <select id="queryByIdentityNo" parameterType="java.lang.String" resultType="CustInfo">
        SELECT <include refid="selectColumns" /> FROM custinfo WHERE vc_identityno = #{identityNo}
    </select>

    <sql id="selectColumns">
        id, vc_custno custNo, c_custtype custType, vc_custname custName, vc_identityno identityNo,
        vc_tacode taCode, vc_tradeacco tradeAcco, vc_taacco taAcco, mobile, email, address, vc_opendate openDate
    </sql>

</mapper>